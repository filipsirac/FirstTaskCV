<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <android.support.constraint.ConstraintLayout
            android:layout_marginTop="@dimen/heading_margin_top"
            android:background="@color/colorYellow"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/horizontalNestedConstraint"
            android:layout_height="@dimen/heightHorizontalNestedConstraint">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/heading_name"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginEnd="@dimen/heading_margin_end"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profession"
                android:textColor="@color/colorWhite"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textSize="@dimen/heading_text_size_white"
                android:layout_margin="@dimen/heading_margin_end"
        />

    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/margin_layout_start"
            android:id="@+id/verticalNestedConstraint"
            android:layout_width="@dimen/widthVerticalNestedConstraint"
            android:background="@color/colorPrimary"
            android:layout_height="match_parent">

        <ImageView
                android:layout_width="@dimen/image_view"
                android:id="@+id/profileImage"
                android:src="@mipmap/ic_launcher_round"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="@dimen/image_margin"
                android:scaleType="centerCrop"
                android:layout_height="@dimen/image_view"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contact_me"
                android:id="@+id/contact"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite"
                app:layout_constraintTop_toBottomOf="@+id/profileImage"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/HeadingMarginAndTextSize"
        />

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mailImage"
                app:layout_constraintTop_toBottomOf="@id/contact"
                android:src="@drawable/email"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/HeadingMarginAndTextSize"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mailDescription"
                android:textColor="@color/colorYellow"
                app:layout_constraintTop_toBottomOf="@+id/contact"
                app:layout_constraintStart_toEndOf="@id/mailImage"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/MarginAndSizeYellowTextView"
        />

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/phoneImage"
                app:layout_constraintTop_toBottomOf="@id/mailImage"
                android:src="@drawable/phone"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/HeadingMarginAndTextSize"

        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/phoneDescription"
                android:textColor="@color/colorYellow"
                style="@style/MarginAndSizeYellowTextView"
                app:layout_constraintStart_toEndOf="@id/phoneImage"
                app:layout_constraintTop_toBottomOf="@id/mailImage"
        />
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addressImage"
                app:layout_constraintTop_toBottomOf="@id/phoneImage"
                android:src="@drawable/location"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/HeadingMarginAndTextSize"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addressDescription"
                android:textColor="@color/colorYellow"
                app:layout_constraintTop_toBottomOf="@+id/phoneImage"
                app:layout_constraintStart_toEndOf="@id/addressImage"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/MarginAndSizeYellowTextView"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/skills"
                android:id="@+id/skill"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite"
                app:layout_constraintTop_toBottomOf="@+id/addressImage"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/HeadingMarginAndTextSize"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/skillLanguage"
                android:textColor="@color/colorYellow"
                app:layout_constraintTop_toBottomOf="@+id/skill"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/MarginAndSizeYellowTextView"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/platform"
                android:textColor="@color/colorYellow"
                app:layout_constraintTop_toBottomOf="@+id/skillLanguage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/MarginAndSizeYellowTextView"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/social"
                android:text="@string/socialMedia"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite"
                app:layout_constraintTop_toBottomOf="@+id/platform"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/HeadingMarginAndTextSize"
        />

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/facebookImage"
                app:layout_constraintTop_toBottomOf="@id/social"
                android:src="@drawable/facebookicon"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/HeadingMarginAndTextSize"
        />

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/instagramImage"
                app:layout_constraintTop_toBottomOf="@id/facebookImage"
                android:src="@drawable/instagramicon"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/HeadingMarginAndTextSize"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/facebookDescription"
                android:textColor="@color/colorYellow"
                app:layout_constraintTop_toBottomOf="@+id/social"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/facebookImage"
                style="@style/MarginAndSizeYellowTextView"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/instagramDescription"
                android:textColor="@color/colorYellow"
                app:layout_constraintTop_toBottomOf="@+id/facebookImage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/instagramImage"
                style="@style/MarginAndSizeYellowTextView"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/languages"
                android:text="@string/languages"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite"
                app:layout_constraintTop_toBottomOf="@+id/instagramImage"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/HeadingMarginAndTextSize"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:id="@+id/languageDescriptionNative"
                android:textColor="@color/colorYellow"
                app:layout_constraintTop_toBottomOf="@+id/languages"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/MarginAndSizeYellowTextView"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:id="@+id/languageDescription"
                android:textColor="@color/colorYellow"
                app:layout_constraintTop_toBottomOf="@+id/languageDescriptionNative"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/MarginAndSizeYellowTextView"
        />


    </android.support.constraint.ConstraintLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:id="@+id/education"
            android:text="@string/education"
            android:textColor="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@+id/horizontalNestedConstraint"
            app:layout_constraintStart_toEndOf="@id/verticalNestedConstraint"
            style="@style/HeadingMarginAndTextSize"
    />
    <TextView
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:id="@+id/singleLine"
            android:textColor="@color/colorPrimary"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@+id/education"
            app:layout_constraintStart_toEndOf="@id/verticalNestedConstraint"
            style="@style/SingleLine"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:id="@+id/nameOfFaculty"
            android:textColor="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@+id/singleLine"
            app:layout_constraintStart_toEndOf="@id/verticalNestedConstraint"
            style="@style/Heading"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:id="@+id/yearAndPlaceOfFaculty"
            android:textColor="@color/colorPrimaryLight"
            app:layout_constraintTop_toBottomOf="@+id/nameOfFaculty"
            app:layout_constraintStart_toEndOf="@id/verticalNestedConstraint"
            style="@style/MarginAndTextSizeMainConstraint"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fullNameOfFaculty"
            android:textColor="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@+id/yearAndPlaceOfFaculty"
            app:layout_constraintStart_toEndOf="@id/verticalNestedConstraint"
            style="@style/MarginAndTextSizeMainConstraint"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:id="@+id/nameOfSchool"
            android:textColor="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@+id/fullNameOfFaculty"
            app:layout_constraintStart_toEndOf="@id/verticalNestedConstraint"
            style="@style/Heading"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:id="@+id/yearAndPlaceOfSchool"
            android:textColor="@color/colorPrimaryLight"
            app:layout_constraintTop_toBottomOf="@+id/nameOfSchool"
            app:layout_constraintStart_toEndOf="@id/verticalNestedConstraint"
            style="@style/MarginAndTextSizeMainConstraint"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fullNameOfSchool"
            android:textColor="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@+id/yearAndPlaceOfSchool"
            app:layout_constraintStart_toEndOf="@id/verticalNestedConstraint"
            style="@style/MarginAndTextSizeMainConstraint"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:id="@+id/experience"
            android:text="@string/experience"
            android:textColor="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@+id/fullNameOfSchool"
            app:layout_constraintStart_toEndOf="@id/verticalNestedConstraint"
            style="@style/HeadingMarginAndTextSize"

    />

    <TextView
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:id="@+id/singleLine1"
            android:textColor="@color/colorPrimary"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@+id/experience"
            app:layout_constraintStart_toEndOf="@id/verticalNestedConstraint"
            style="@style/SingleLine"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:id="@+id/nameOfWorkingPlace"
            android:textColor="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@+id/singleLine1"
            app:layout_constraintStart_toEndOf="@id/verticalNestedConstraint"
            style="@style/Heading"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:id="@+id/dateOfExperience"
            android:textColor="@color/colorPrimaryLight"
            app:layout_constraintTop_toBottomOf="@+id/nameOfWorkingPlace"
            app:layout_constraintStart_toEndOf="@id/verticalNestedConstraint"
            style="@style/MarginAndTextSizeMainConstraint"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/typeOfExperience"
            android:textColor="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@+id/dateOfExperience"
            app:layout_constraintStart_toEndOf="@id/verticalNestedConstraint"
            style="@style/MarginAndTextSizeMainConstraint"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linkToWorkingPlace"
            android:textColor="@color/colorYellow"
            app:layout_constraintTop_toBottomOf="@+id/typeOfExperience"
            app:layout_constraintStart_toEndOf="@id/verticalNestedConstraint"
            style="@style/MarginAndTextSizeMainConstraint"
    />
</android.support.constraint.ConstraintLayout>